<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Allow underscore naming convention in test methods -->
    <!-- CA1515: Test classes need to be public for TUnit discovery -->
    <!-- CA2007: ConfigureAwait is not relevant for test code -->
    <NoWarn>$(NoWarn);CA1707;CA1515;CA2007</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TUnit" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paradise.ECS.Generators\Paradise.ECS.Generators.csproj" />
    <ProjectReference Include="..\Paradise.ECS.Concurrent\Paradise.ECS.Concurrent.csproj" />
    <ProjectReference Include="..\Paradise.ECS.Tag\Paradise.ECS.Tag.csproj" />
  </ItemGroup>

</Project>
